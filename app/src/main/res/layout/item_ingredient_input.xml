<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">

    <EditText android:id="@+id/edtIngredientName" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Tên nguyên liệu" android:textSize="15sp" android:textColor="#111111" android:background="@drawable/edit_text_background" android:padding="12dp" android:layout_marginEnd="8dp" />

    <EditText android:id="@+id/edtIngredientQuantity" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Số lượng" android:textSize="15sp" android:textColor="#111111" android:background="@drawable/edit_text_background" android:padding="12dp" android:layout_marginEnd="8dp" />

    <ImageButton android:id="@+id/btnRemoveIngredient" android:layout_width="40dp" android:layout_height="40dp" android:background="@android:color/transparent" android:src="@android:drawable/ic_menu_close_clear_cancel" android:tint="#000000" android:contentDescription="Remove" />
</LinearLayout>

