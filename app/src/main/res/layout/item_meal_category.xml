<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp" app:cardBackgroundColor="#F5F5F5">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

        <!-- Header with Meal Name and Add Button -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">

            <TextView android:id="@+id/tvMealName" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Bữa sáng" android:textSize="18sp" android:textStyle="bold" android:textColor="#111111" />

            <Button android:id="@+id/btnAddDish" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+ Thêm món" android:textSize="14sp" android:textColor="#FFFFFF" android:background="#000000" android:paddingHorizontal="12dp" android:paddingVertical="6dp" android:drawableStart="@android:drawable/ic_input_add" android:drawablePadding="6dp" android:drawableTint="#FFFFFF" />
        </LinearLayout>

        <!-- Dishes Container -->
        <LinearLayout android:id="@+id/containerDishes" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:visibility="gone" />

        <!-- Empty State -->
        <FrameLayout android:layout_width="match_parent" android:layout_height="120dp" android:background="@drawable/empty_dish_background" android:padding="16dp">

            <TextView android:id="@+id/tvEmptyMessage" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Chưa có món ăn" android:textSize="14sp" android:textColor="#999999" android:gravity="center" />
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

